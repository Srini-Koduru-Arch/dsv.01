<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Declares that the app uses the camera hardware. Not a permission. -->
    <uses-feature android:name="android.hardware.camera" android:required="true"/>
    <!-- Permissions for Camera access -->
    <uses-permission android:name="android.permission.CAMERA"/>

    <!-- uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" tools:ignore="ScopedStorage" / -->

    <!-- Permissions for Reading Storage (READ_EXTERNAL_STORAGE for API 32 and below) -->
    <!-- This is for reading general files on older Android versions. -->
    <!--<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="29" />-->
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />

    <!-- Permissions for Reading Media (Android 13 / API 33 and above) -->
    <!-- These are granular permissions for accessing media files. -->
    <!-- READ_MEDIA_IMAGES is crucial for listing scanned documents (which are often images/PDFs). -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <!-- Add READ_MEDIA_VIDEO and READ_MEDIA_AUDIO if your app will also list/access those types of files -->
    <!-- <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" /> -->
    <!-- <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" /> -->

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DocuScanner"
        android:enableOnBackInvokedCallback="true"
        tools:targetApi="35">
        <!-- Sample AdMob app ID: ca-app-pub-3940256099942544~3347511713 -->
        <!-- Production AdMob app ID: ca-app-pub-3859216096123806/2479545443 -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713"/>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.DocuScanner"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <provider
            android:authorities="${applicationId}.provider"
            android:name="androidx.core.content.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"/>
        </provider>

    </application>

</manifest>